{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trained Debaters Configuration Schema",
  "type": "object",
  "properties": {
    "configurations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "instance_ip": {
            "type": "string",
            "format": "ipv4"
          },
          "home_dir": {
            "type": "string"
          },
          "configurations": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "num_iters": {
                "type": "integer"
              },
              "count": {
                "type": "integer"
              }
            },
            "required": ["name", "num_iters", "count"]
          }
        },
        "required": ["instance_ip", "home_dir", "configurations"]
      }
    }
  },
  "required": ["configurations"]
}
